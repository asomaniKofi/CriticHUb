<% include ../partials/reviewheadfile %>
<div class="container">
      <h1 style="text-align:center;">Review <%= restaurant.Name%></h1>
    <div class="row">
        <div style="width:50%; margin:25px auto;">
<form action="/restaurants/<%= restaurant._id%>/reviews" method="POST">
   <div class="form-group">
     Review: <textarea class="form-control" placeholder="Sincere review here" rows="10" cols="30" name="Review"></textarea>
</div>
  Rating:  <div id="rateYo" style="padding:0 160px;!important"></div>
  <input type="hidden" id="custId" name="custId" value="" required> 
  <div class="form-group">
    <button id="submit" class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
</div>
</form>
           <a href="/restaurants">Return</a>
        </div>
    </div>
</div>
<script>
 $("#rateYo").each(function(e){
     $(this).rateYo({
   starWidth: "40px",
   normalFill: "#A0A0A0",
   numStars: 5,
   maxValue: 5,
   precision: 1,
   rating:0,
   halfStar: false,
   onSet: function (rating, rateYoInstance) {
     if (rating > 0) {
        $("#custId").val(rating);
        $("#custId").html(rating);
    }else {
        $("#custId").val(rating);
         $("#custId").html(rating);
    }
}
 }); 
 });
    </script>
