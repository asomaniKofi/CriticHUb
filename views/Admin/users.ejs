<h1 class="text-center"> Admin Panel</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">UserName</th>
      <th scope="col">Email</th>
      <th scope="col">Type</th>
    </tr>
  </thead>
 
  <tbody>
     <% Users.forEach(function(user){%>
    <tr>
      <% if(user.Type != "HubAdmin"){ %>
      <td><%= user.username%></td>
       <td><%= user.Email %></td>
       <td><%= user.Type %></td>
       <% }%>
    </tr>
    <% }); %>
  </tbody>
</table>

